        br
        form(id="paquete", action="paquete-personalizado.php", method="post", style="position: relative;")
          table.paquete-persona
            tr
              td.centrar(colspan="2")
                | PRECIO POR PERSONA
                select#personaID(name="personas")
                  option(value="1") 1
                  option(value="2") 2
                  option(value="3") 3
                  option(value="4") 4
                  option(value="5") 5
                  option(value="6") 6
                  option(value="7") 7
            tr
              td.centrar DOLAR
              td.centrar SOLES
            tr
              td.centrar#valorDolares(data-dolares="45") $ 45
              td.centrar#valorSoles(data-soles="146") S/. 146
            tr
              td(style="text-align: right;") Nombre:
              td
                input(type="hidden", name="soles", value="S/. 146")
                input(type="hidden", name="dolares", value="$ 45")
                input(type="text", name="nombre", style="width: 40%;", required)
            tr
              td(style="text-align: right;") Apellido:
              td
                input(type="text", name="apellido", style="width: 40%;")
            tr
              td(style="text-align: right;") Correo:
              td
                input(type="email", name="correo", style="width: 40%;", required)
            tr
              td(style="text-align: right;") DNI o Pasaporte:
              td
                input(type="number", name="dni", style="width: 40%;", required)
            tr
              td(colspan="2", style="text-align: center;")
                input(type="submit", value="Enviar")
            .overlay-form#mensaje-stado
              .form-mensaje-text Enviando ....
