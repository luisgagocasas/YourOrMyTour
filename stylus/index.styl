//Estructura
.page
    width: 1000px
    margin: auto
    color #333
    border-left: 1px solid #bbb
    border-right: 1px solid #bbb
.contenido
    background: white
    box-shadow: 0px 10px 20px 0px black
h1
  color #333
.cabecera
    flexbox()
    background: cornflowerblue
    padding-top: 30px
    padding-bottom: 20px
    box-shadow: inset 0px -5px 15px -5px #0D47A1
    .cabeceraLogo
        flex 3
        text-align: center
        a
            text-decoration: none
        h1
            color white
            font-size: 40px
            line-height: 32px
            //text-shadow: 0px 0px 5px #333
            text-shadow: 1px 0px 0 rgb(238,238,238), 5px 4px 0 rgb(112,112,112)
            //text-shadow: 1px 2px 0 rgb(255,210,23), 2px 4px 0 rgb(90,199,255), 3px 6px 0 rgb(255,210,23), 4px 7px 0 rgb(90,199,255)
    .cabeceraMenu
        flex 9
        flexbox()
        justify-content: center
        align-items: center
    .menutop
        flexbox()
        padding: 0
        margin: 0
        align-items: center
        li
            list-style: none
            text-align: center
            width: 100%
            a
                width: auto
                display: inline-block
                text-decoration: none
                color white
                border-bottom: 4px solid transparent
                font-family: 'Macondo', cursive
                &:hover
                    color: #FFC107
                    border-bottom: 4px solid #CDDC39
.paquetes-vista
    li
        display: inline-block;
        vertical-align: middle;
        list-style: none;
.contColumnas
    flexbox()
    padding-top: 20px
    .columnaIzquierda
        flex 3
        text-align: center
        img
            width: 90%
    .columnaCentro
        flex 6
        
        p
            line-height: 30px
        li
            line-height: 30px
    .columnaDerecha
        flex 3
    .columnaCentroCont
        flex 9
        p
            line-height: 30px
        li
            line-height: 30px
.fotosPortada
    padding: 0
    height: 600px
    overflow-x: hidden
    margin-left: 5px
    margin-right: 5px
    margin-bottom: 20px
    li
        width: 100%
        list-style: none
        text-align: center
        margin-bottom: 10px
        img
            width: 95%
            box-shadow: 0px 0px 5px 0px #333
            text-align: center
            border-radius: 2px
            &:hover
                width: 100%
.destinos-galeria
    background: #F5F5F5
    padding: 0
    text-align: justify
    li
        width: 32%
        list-style: none
        display: inline-block
        padding: 10px
        text-align: center
        img
            width: 100%
.foto
    width: 200px
    height: 200px
    display: flex
    justify-content: center
    align-items: center
    box-shadow: 0 0 0 100px inset, 0 0 5px grey
    transition: box-shadow 1s
    float: left
    margin: 10px
.foto::after
    width: 80%
    height: 80%
    display: block
    white-space: pre
    color: white
    border: 2px solid
    text-align: center
    display: flex
    justify-content: center
    align-items: center
    transition: opacity 1s .5s
.foto:hover
    box-shadow: 0 0 0 5px inset, 0 0 5px grey, 0 0 10px grey inset;
    transition: box-shadow 1s
.foto:hover::after
  opacity: 0
  transition: opacity .5s
