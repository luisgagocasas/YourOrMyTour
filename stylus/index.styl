    float: left
    margin: 10px
.foto::after
    width: 80%
    height: 80%
    display: block
    white-space: pre
    color: white
    border: 2px solid
    text-align: center
    display: flex
    justify-content: center
    align-items: center
    transition: opacity 1s .5s
.foto:hover
    box-shadow: 0 0 0 5px inset, 0 0 5px grey, 0 0 10px grey inset;
    transition: box-shadow 1s
.foto:hover::after
  opacity: 0
  transition: opacity .5s
